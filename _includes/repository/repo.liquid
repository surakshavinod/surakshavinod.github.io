{% assign repo_url = include.repository | split: '/' %}

{% if repo_url.size == 2 %}
  {% assign username = repo_url[0] %}
  {% assign repo_name = repo_url[1] %}
{% else %}
  {% assign username = "" %}
  {% assign repo_name = include.repository %}
{% endif %}

<div class="repo p-2 text-center">
  <div class="repo-card p-3 border rounded">
    <h5 class="mb-2">
      <a href="https://github.com/{{ include.repository }}" target="_blank">
        {{ repo_name }}
      </a>
    </h5>

    <p class="text-muted mb-2">
      {{ username }}
    </p>

    <a
      href="https://github.com/{{ include.repository }}"
      class="btn btn-sm btn-outline-primary"
      target="_blank"
    >
      View on GitHub
    </a>
  </div>
</div>
